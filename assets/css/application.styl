.divider
  /* Glyph, by Harry Roberts */
    
hr.divider 
    padding: 0;
    border: none;
    border-top: medium double #333;
    color: #333;
    text-align: center

hr.divider:after 
    content "HR"
    display inline-block
    position relative
    top -0.7em  
    font-size 1.5em
    padding 0 0.25em
    background white


.details.ng-hide-add,
.details.ng-hide-remove 
  -webkit-transition 0.5s linear all
  -moz-transition 0.5s linear all
  -o-transition 0.5s linear all
  transition 0.5s linear all
  display block!important

.details.ng-hide-remove
  opacity 0
  color red

.details.ng-hide-remove.ng-hide-remove-active 
  opacity 1

.details.ng-hide-add 
  opacity 1

.details.ng-hide-add.ng-hide-add-active 
  opacity 0
