extends layout

block content
  h1 Aloha Alluring Alumni!
  h3 Please login to edit your information
  div(ng-show='user')
    button.btn.btn-warning(ng-click="logout()") Logout
    h2 {{user.username}}
    form.details
      | Blog: 
      input.detail(type="text",ng-model="user.blog", placeholder="{{user.blog}}")br
      | Cohort:
      input.detail(type="text",ng-model="user.cohort", placeholder="{{user.cohort}}")br
      br
      | Company:
      input.detail(type="text",ng-model="user.company", placeholder="{{user.company}}")br
      br
      |Website:
      input.detail(type="text",ng-model="user.website", placeholder="{{user.website}}")br
      | Job Title:
      input.detail(type="text",ng-model="user.jobtitle", placeholder="{{user.jobtitle}}")br
      br
      | Linked In:
      input.detail(type="text",ng-model="user.linkedin", placeholder="{{user.linkedin}}")br
      br
      | Twitter:
      input.detail(type="text",ng-model="user.twitter", placeholder="{{user.twitter}}")br
      br
      | Quora:
      input.detail(type="text",ng-model="user.quora", placeholder="{{user.quora}}")br
      br
  span(ng-hide='user')
    button.btn.btn-primary(ng-click='login()') Github Login

  hr.divider

  .alumnus(ng-click="$event.preventDefault()", ng-cloak)
    .search Search:
      input.searchBox(type="text", ng-model="searchText")
    div(ng-repeat="alumnus in alumni | alumnusfilter:searchText")
      h3
        a(href='#', ng-click="showDetails = !showDetails") {{alumnus.firstname}}  {{alumnus.lastname }}
      .details(ng-hide="!showDetails", ng-disabled="5==5")
        p.detail Blog: {{alumnus.blog}}
        br
        p.detail Cohort: {{alumnus.cohort}}
        br
        p.detail Company: {{alumnus.company}}
        br
        p.detail Website: {{alumnus.website}}
        br
        p.detail Job Title: {{alumnus.jobtitle}}
        br
        p.detail Linked In: {{alumnus.linkedin}}
        br
        p.detail Twitter: {{alumnus.twitter}}
        br
        p.detail Quora: {{alumnus.quora}}
        br


  
